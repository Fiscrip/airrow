{
  "settings": {
    "analysis": {
      "analyzer": {
        "status_analyzer": {
          "type": "custom",
          "tokenizer": "status_tokenizer",
          "char_filter": [],
          "filter": []
        },
        "status_search_analyzer": {
          "type": "custom",
          "tokenizer": "status_tokenizer",
          "char_filter": [
            "remove_variation_selectors"
          ],
          "filter": []
        }
      },
      "tokenizer": {
        "status_tokenizer": {
          "type": "ngram",
          "min_gram": 1,
          "max_gram": 2
        }
      },
      "char_filter": {
        "remove_variation_selectors": {
          "type": "mapping",
          "mappings": [
            "\ufe00 => ",
            "\ufe0e => ",
            "\ufe0f => "
          ]
        }
      }
    },
    "index": {
      "number_of_shards": 1,
      "number_of_replicas": 0
    }
  },
  "mappings": {
    "_doc": {
      "properties": {
        "location": {
          "type": "geo_point"
        },
        "status": {
          "type": "text",
          "analyzer": "status_analyzer",
          "search_analyzer": "status_search_analyzer"
        },
        "relation": {
          "type": "join",
          "relations": {
            "entity": "rating"
          }
        },
        "updatedAt": {
          "type": "date",
          "format": "basic_date_time"
        },
        "creator": {
          "type": "keyword"
        },
        "refCode": {
          "type": "keyword"
        },
        "selfReference": {
          "type": "boolean"
        },
        "permanent": {
          "type": "boolean"
        },
        "mimeType": {
          "type": "keyword"
        },
        "path": {
          "type": "keyword"
        },
        "rating": {
          "type": "keyword"
        }
      }
    }
  }
}