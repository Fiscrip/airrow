{
    "script": {
        "lang": "mustache",
        "source": {
            "query": {
                "function_score": {
                    "query": {
                        "bool": {
                            "must": {
                                "match_all": {}
                            },
                            "should": {
                                "match": {
                                    "status": {
                                        "query": "{{status}}"
                                    }
                                }
                            },
                            "filter": [
                                {
                                    "geo_distance": {
                                        "distance": "300km",
                                        "location": {
                                            "lat": "{{location.latitude}}",
                                            "lon": "{{location.longitude}}"
                                        }
                                    }
                                },
                                {
                                    "bool": {
                                        "should": [
                                            {
                                                "exists": {
                                                    "field": "permanent"
                                                }
                                            },
                                            {
                                                "range": {
                                                    "updatedAt": {
                                                        "gt": "now-{{ttl}}"
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                }
                            ],
                            "must_not": [
                                {
                                    "term": {
                                        "_id": "{{self}}"
                                    }
                                },
                                {
                                  "term" : {
                                    "visitor" : "{{self}}"
                                  }
                                }
                            ]
                        }
                    },
                    "functions": [
                        {
                            "gauss": {
                                "location": {
                                    "origin": {
                                        "lat": "{{location.latitude}}",
                                        "lon": "{{location.longitude}}"
                                    },
                                    "scale": "1000m",
                                    "offset": "{{walkDistance}}",
                                    "decay": "{{scale}}"
                                }
                            }
                        },
                        {
                            "linear": {
                                "location": {
                                    "origin": {
                                        "lat": "{{location.latitude}}",
                                        "lon": "{{location.longitude}}"
                                    },
                                    "scale": "{{walkDistance}}",
                                    "offset": "0m",
                                    "decay": "{{scale}}"
                                }
                            }
                        }
                    ]
                }
            }
        }
    }
}